@model AgendamentoDeTarefas.Models.RegistrarModel
@{
    ViewData["Title"] = "Registrar";
}

<div id="login">
    <h3 class="text-center text-white pt-5">Seja bem vindo!!!</h3>
    <div class="container">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-6">
                <div id="login-box" class="col-md-12">
                    <form asp-action="Registrar" id="login-form" class="form">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <h3 class="text-center text-info">Registrar</h3>
                        <div class="form-group">
                            <label asp-for="UserName" class="text-info">Usuário:</label><br>
                            <input asp-for="UserName" id="username" class="form-control">
                            <span id="botao-span" asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="text-info">Senha:</label><br>
                            <input asp-for="Password" id="password" class="form-control">
                            <span id="botao-span" asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="text-info">Confirmar senha:</label><br>
                            <input asp-for="ConfirmPassword" id="password" class="form-control">
                            <span id="botao-span" asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <br />
                            <input id="botao-registrar" type="submit" name="submit" class="btn btn-info btn-md" value="Registrar">
                        </div>
                        <div id="register-link2" class="text-right">
                            <a asp-action="Logar" class="btn btn-info btn-md">Voltar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>