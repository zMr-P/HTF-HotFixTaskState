@model AgendamentoDeTarefas.Entites.Tarefa
@{
    ViewData["Title"] = "Editar tarefa";
}
<h3>Editar Tarefa: @Model.Titulo</h3>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditarTarefa">
            <div class="form-group" ´>
                <label asp-for="Titulo" class="control-label">Titulo da tarefa</label>
                <input asp-for="Titulo" class="form-control" />
            </div>
            <div class="form-group" ´>
                <label asp-for="Descricao" class="control-label">Descrição</label>
                <input asp-for="Descricao" class="form-control" />
            </div>
            <div class="form-group" ´>
                <label asp-for="Data" class="control-label">Data</label>
                <input asp-for="Data" class="form-control" />
            </div>
            <br />       
            <div class="form-check">
                <input asp-for="Status" class="form-check-input" type="radio"  value="0" checked />
                <label asp-for="Status" class="form-check-label">
                    Pendente
                </label>
            </div>
            <div class="form-check">
                <input asp-for="Status" class="form-check-input" type="radio" value="1"/>
                <label asp-for="Status" class="form-check-label">
                    Finalizado
                </label>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Concluir" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <a asp-action="ObterTodos" style="color:white;">Voltar</a>
</div>