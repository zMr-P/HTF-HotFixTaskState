@model IEnumerable<AgendamentoDeTarefas.Entites.Tarefa>
@{
    ViewData["Title"] = "Todas as tarefas";

}
<h2 style="color:white;" id="TituloObterTodos">Minhas Tarefas</h2>

<br />
<br />
<br />

<p>
    <a asp-action="CriarTarefa" class="btn btn-primary">Criar nova Tarefa</a>
</p>

<table class="table" id="table-contatos" style="color:white;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Data)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Status)
                </td>
                <td>
                    <a asp-action="EditarTarefa" asp-route-id="@item.Id" style="color:yellow;">Editar</a>
                    <a asp-action="Detalhes" asp-route-id="@item.Id" style="color:white;">Detalhes</a>
                    <a asp-action="Deletar" asp-route-id="@item.Id" class="btn-outline-danger">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>